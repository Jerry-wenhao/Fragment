<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RightFragmentOfAndroid">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/android_name"
        android:layout_marginTop="@dimen/android_name_top"
        android:background="@drawable/buttons"
        android:text="@string/android_name"
        android:textAllCaps="false"
        android:textSize="@dimen/right_android" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/android_margin_top"
        android:layout_marginStart="@dimen/android_name"
        android:background="@drawable/buttons"
        android:text="@string/android_details"
        android:textAllCaps="false"
        android:textSize="@dimen/right_android" />

</FrameLayout>